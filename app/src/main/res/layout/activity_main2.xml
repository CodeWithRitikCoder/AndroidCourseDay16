<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="340sp"
        android:gravity="center"
        android:text="@string/dynamic_and_stylish_photo_frame"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageViewImage0"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img0" />

        <ImageView
            android:id="@+id/imageViewImage1"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="0"
            app:srcCompat="@drawable/img1"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="519dp" />

        <ImageView
            android:id="@+id/imageViewImage2"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="0"
            app:srcCompat="@drawable/img2"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="519dp" />

        <ImageView
            android:id="@+id/imageViewImage3"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="0"
            app:srcCompat="@drawable/img3"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="519dp" />

        <ImageView
            android:id="@+id/imageViewImage4"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="0"
            app:srcCompat="@drawable/img4"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="519dp" />

        <ImageView
            android:id="@+id/imageViewImage5"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="0"
            app:srcCompat="@drawable/img5"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="519dp" />

        <ImageView
            android:id="@+id/imageViewImage6"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="0"
            app:srcCompat="@drawable/img6"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="519dp" />

        <ImageView
            android:id="@+id/imageViewImage7"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="0"
            app:srcCompat="@drawable/img7"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="519dp" />

        <ImageView
            android:id="@+id/imageViewImage8"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="0"
            app:srcCompat="@drawable/img8"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="519dp" />

        <ImageView
            android:id="@+id/imageViewImage9"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:alpha="0"
            app:srcCompat="@drawable/img9"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="519dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonForPrevious"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/image_button_background"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/imageButtonForNext"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/image_button_background"
            app:srcCompat="@android:drawable/ic_media_ff" />
    </LinearLayout>

</LinearLayout>